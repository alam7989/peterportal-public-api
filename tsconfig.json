{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "rootDir": "./",
      "removeComments": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "sourceMap": true,
      "watch": true,
      "alwaysStrict": true,
      "allowJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include":[ 
      "db/**/*",
      "cache/**/*",
      "docs-site/**/*",
      "graphql/**/*",
      "helpers/**/*",
      "rest/**/*",
      "tests/**/*",
      "types/**/*",
      "app.ts",
      "server.ts"
    ],
    "exclude":[ 
        "node_modules"
    ]
}